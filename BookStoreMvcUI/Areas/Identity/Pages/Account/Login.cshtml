@page
@model LoginModel

@*@{
    ViewData["Title"] = "Giriş Yap";
}*@

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 mt-5">
        <section>
            <form id="account" method="post">
                <h2>Giriş yapmak için hesabınızı kullanın.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="şifre" />
                    <label asp-for="Input.Password" class="form-label">Şifre</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input mx-md-3" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Giriş Yap</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Şifremi Unuttum</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Kayıt Ol</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Email doğrulamasını tekrar gönder</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2 mx-5">
        <section>
            <h1 class="fw-bold mt-4">Kitapçı'ya Hoş Geldiniz</h1>
            <hr />
            <h2>
                Kitapçı, en kaliteli kitapların en ucuza satıldığı bir internet mağazasıdır.
            </h2>
            <span></span>
            <img class="img-responsive center-block d-block mx-auto my-5 table-bordered" src="/images/kitapci.png"/>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
