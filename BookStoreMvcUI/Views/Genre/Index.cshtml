@model IEnumerable<BookStoreMvcUI.Models.Genre>

<h2 class="m-5">
    Türleri Düzenle
</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Yeni Tür Ekle</a>
</p>

@if(TempData["success"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["success"]
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["error"]
    </div>
}

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Ad</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.GenreName</td>
            <td class="d-flex justify-content-center">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info me-2 ms-2">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger me-2 ms-2">Sil</a>
            </td>
        </tr>
    }
</table>
